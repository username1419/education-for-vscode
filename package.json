{
  "name": "education-for-vscode",
  "displayName": "Education for VSCode",
  "description": "na",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "education-for-vscode.startEducation",
        "title": "Education for VSCode: Begin Study Session"
      },
      {
        "command": "education-for-vscode.endEducation",
        "title": "Education for VSCode: End Study Session"
      },
      {
        "command": "education-for-vscode.submitCode",
        "title": "Education for VSCode: Submit Code"
      },
      {
        "command": "education-for-vscode.setupOllama",
        "title": "Education for VSCode: Run Ollama Setup"
      },
      {
        "command": "education-for-vscode.restartLesson",
        "title": "Education for VSCode: Restart Lesson"
      },
      {
        "command": "education-for-vscode.debugClearGlobalStorage",
        "title": "Education for VSCode: (Debug) Revert to default"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "model-installer-sidebar",
          "title": "Model Installer",
          "icon": "/resources/icons/download-icon.svg"
        },
        {
          "id": "chat-sidebar",
          "title": "Ollama Chat",
          "icon": "/resources/icons/ollama-icon.svg"
        }
      ]
    },
    "views": {
      "model-installer-sidebar": [
        {
          "icon": "/resources/icons/download-icon.svg",
          "id": "model-installer-view",
          "name": "Model Installer",
          "type": "webview"
        }
      ],
      "chat-sidebar": [
        {
          "icon": "/resources/icons/ollama-icon.svg",
          "id": "chat-view",
          "name": "Ollama Chat",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.8",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "cheerio": "^1.1.0",
    "n": "^10.2.0",
    "node": "^20.19.3",
    "node-html-markdown": "^1.3.0",
    "ollama": "^0.5.16",
    "openai": "^5.7.0",
    "stable": "^0.1.8",
    "systeminformation": "^5.27.7",
    "undici": "^7.10.0"
  }
}
